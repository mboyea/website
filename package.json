{
	"name": "www-mboyea-com",
	"version": "0.0.0",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "bash scripts/start_dev_server.sh",
		"preview": "vite build -m development && bash scripts/start_preview_server.sh",
		"deploy": "pnpm i && vite build && pnpm run deploy:database && pnpm run deploy:secrets && pnpm run deploy:server",
		"deploy:database": "bash scripts/deploy_database.sh",
		"deploy:secrets": "bash scripts/stage_secrets.sh",
		"deploy:server": "flyctl deploy -a www-mboyea-com",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"devDependencies": {
		"@sveltejs/adapter-node": "^1.2.4",
		"@sveltejs/kit": "^1.20.0",
		"@types/pg": "^8.10.7",
		"sass": "^1.63.4",
		"svelte": "^3.59.1",
		"svelte-check": "^3.4.3",
		"tslib": "^2.5.2",
		"typescript": "^5.1.3",
		"vite": "^4.5.0"
	},
	"dependencies": {
		"pg": "^8.11.3"
	}
}
